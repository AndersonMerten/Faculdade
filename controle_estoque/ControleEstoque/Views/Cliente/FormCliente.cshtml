@model ControleEstoque.ViewModels.ClienteFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Cliente"))
{

    <div class="form-group hidden">
        @Html.LabelFor(m => m.Cliente.Id)
        @Html.TextBoxFor(m => m.Cliente.Id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Nome)
        @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Fone)
        @Html.TextBoxFor(m => m.Cliente.Fone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Cpf)
        @Html.TextBoxFor(m => m.Cliente.Cpf, new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-danger"><i aria-hidden="true"></i>&nbsp;Salvar</button>

}